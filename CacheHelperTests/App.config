<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>

  <appSettings>
    <add key="CacheSql.IsAllowed" value="true" />
    <add key="CacheSql.TTLMin" value="1" />
  </appSettings>
    
  <connectionStrings>
    <remove name="CacheSqlServer" />
    <add name="CacheSqlServer" connectionString="packet size=4096;integrated security=SSPI;data source=localhost\SQLEXPRESS_2014;persist security info=False;initial catalog=CacheDB;Pooling=True;" />
  </connectionStrings>

  <log4net>
    <appender name="LogFile" type="log4net.Appender.RollingFileAppender">
      <file value="C:\Temp\Log\CacheHelper.log" />
      <appendToFile value="true" />
      <rollingStyle value="Date" />
      <datePattern value="yyyyMM" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <immediateFlush value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss}|%-5level|%logger|TH:%thread|%message%newline" />
      </layout>
    </appender>
    <root>
      <level value="INFO" />
      <appender-ref ref="LogFile" />
    </root>
  </log4net>
</configuration>